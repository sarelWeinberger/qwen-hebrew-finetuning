{
  "fp16": {
    "enabled": true,
    "loss_scale": 0,
    "loss_scale_window": 1000,
    "initial_scale_power": 16,
    "hysteresis": 2,
    "min_loss_scale": 1
  },
  "zero_optimization": {
    "stage": 2,
    "offload_optimizer": {
      "device": "nvme",
      "pin_memory": true,
      "buffer_count": 4,
      "fast_init": false
    },
    "allgather_partitions": true,
    "allgather_bucket_size": 200000000,
    "overlap_comm": true,
    "reduce_scatter": true,
    "reduce_bucket_size": 200000000,
    "contiguous_gradients": true
  },
  "gradient_accumulation_steps": 2,
  "gradient_clipping": 1.0,
  "steps_per_print": 10,
  "train_micro_batch_size_per_gpu": 4,
  "wall_clock_breakdown": false,
  "nvme_optimization": {
    "enabled": true,
    "checkpoint_in_nvme": true,
    "optimizer_state_nvme": true,
    "nvme_path": "/tmp/nvme_cache"
  },
  "memory_optimization": {
    "enabled": true,
    "cpu_offload": false,
    "contiguous_gradients": true,
    "overlap_comm": true
  },
  "communication": {
    "allreduce_partitions": true,
    "allreduce_bucket_size": 500000000,
    "reduce_scatter": true,
    "reduce_bucket_size": 500000000
  },
  "scheduler": {
    "type": "WarmupLR",
    "params": {
      "warmup_min_lr": 0,
      "warmup_max_lr": 1e-5,
      "warmup_num_steps": 100
    }
  },
  "aio": {
    "block_size": 1048576,
    "queue_depth": 8,
    "thread_count": 1,
    "single_submit": false,
    "overlap_events": true
  }
